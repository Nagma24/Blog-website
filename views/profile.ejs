<%- include("partials/css"); -%>
    <%- include("partials/header"); -%>
        <title>Profile</title>

        <div class="d-flex flex-column justify-content-center align-items-center" style="width: 100%;">
            <div class="card" style="width:400px;">
                <div class="card-header">
                    <p>
                        <%= user.username %>
                    </p>
                </div>
                <div class="card-body">
                    <p>
                        <%= user.email %>
                    </p>
                    <footer class="blockquote-footer">
                        Join on <cite title=" <%= user.oncreated.substring(0, 10) %>">
                            <%= user.oncreated.substring(0, 10) %>
                        </cite>
                    </footer>
                </div>
            </div>
            <div class="mt-1 mb-1">
                <p>Posts by <%= user.username %>
                </p>
            </div>
            <% posts.forEach(function(post) { %>
                <div class="card mt-1" style="width:400px;">
                    <div class="card-body">
                        <p>
                            <%= post.content %>
                        </p>

                        <a href="/comment?id=<%= post.id %>" class="btn btn-light"> <i
                                class="fa-regular fa-comment"></i>
                            Comment</a>
                    </div>
                    <div class="card-footer" style="background-color: rgba(255, 0, 0, 0.7);">
                        <form action="/create/del?id=1" method="post">
                            <button type="submit" class="btn" style="width: 100%;"> Delete Post</button>
                        </form>
                    </div>
                </div>
                <% }); %>
        </div>