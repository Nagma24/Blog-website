<%- include("partials/css"); -%>
    <%- include("partials/header"); -%>
        <title>Comments</title>

        <div class="d-flex flex-column justify-content-center align-items-center mt-5" style="width: 100% ;">
            <div class="card mb-3" style="width:400px ;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= post.username %>
                    </h5>
                    <p class="card-text">
                        <%= post.content %>
                    </p>
                </div>
            </div>

            <div style="width: 400px;">
                <form style="width: 100%;" action="/comment?id=<%= post.id %>" method="post">
                    <input type="text" name="comment" class="form-control" style="width: 400px;"
                        placeholder="Commment here">
                    <button type="submit" class="btn btn-primary mt-1" style="width: 100%;">Commnet</button>
                </form>
            </div>

            <!-- for commnets div -->
            <div class="d-flex flex-column justify-content-center align-items-center mt-2" style="width: 100% ;">
                <% comments.forEach((item)=>{%>
                    <div class="card mb-1" style="width:400px ;">
                        <div class="card-header">
                            <h7 class="card-title">
                                <%= item.username %>
                            </h7>
                        </div>
                        <div class="card-body">

                            <p class="card-text">
                                <%= item.content %>
                            </p>
                        </div>
                    </div>
                    <%});%>

            </div>